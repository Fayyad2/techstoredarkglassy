      "id": "colors",
      "type": "group",
      "label": "Theme colors",
      "fields": [
        { "id": "accent_color", "type": "color", "label": "Accent color", "default": "#00aaff" },
        { "id": "bg_color", "type": "color", "label": "Background color", "default": "#0b0b0d" },
        { "id": "glass_opacity", "type": "range", "label": "Glass opacity", "min":0, "max":1, "step":0.05, "default":0.6 },
          
        {
            "type": "static",
            "format": "title",
            "id": "theme-header",
            "value": "إعدادات متجر التقنية الداكن",
            "variant": "h4"
        },
        {
            "type": "static",
            "format": "description",
            "id": "theme-description",
            "value": "قالب متجر إلكتروني متخصص في بيع أجهزة الكمبيوتر والتقنية بتصميم داكن وعصري"
        },
        {
            "type": "static",
            "format": "line",
            "id": "divider-1"
        },
        {
            "type": "static",
            "format": "title",
            "id": "visual-settings",
            "value": "الإعدادات البصرية",
            "variant": "h6"
        },
        {
            "id": "dark_mode_intensity",
            "type": "items",
            "format": "dropdown-list",
            "label": "شدة الوضع الداكن",
            "description": "اختر مستوى الظلام المناسب لمتجرك",
            "icon": "sicon-moon",
            "selected": [
                {
                    "label": "داكن متوسط (موصى به)",
                    "value": "medium",
                    "key": "medium-dark"
                }
            ],
            "options": [
                {
                    "label": "داكن خفيف",
                    "value": "light",
                    "key": "light-dark"
                },
                {
                    "label": "داكن متوسط (موصى به)",
                    "value": "medium",
                    "key": "medium-dark"
                },
                {
                    "label": "داكن عميق",
                    "value": "deep",
                    "key": "deep-dark"
                }
            ],
            "required": true
        },
        {
            "type": "boolean",
            "icon": "sicon-sparkles",
            "label": "تأثيرات زجاجية (Glassmorphism)",
            "description": "إضافة تأثيرات زجاجية شفافة للعناصر",
            "id": "glass_effects",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "boolean",
            "icon": "sicon-zap",
            "label": "الرسوم المتحركة المتقدمة",
            "description": "تفعيل الحركات والانتقالات السلسة",
            "id": "advanced_animations",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "boolean",
            "icon": "sicon-cpu",
            "label": "عرض مواصفات المنتجات التقنية",
            "description": "إظهار جدول المواصفات التقنية للمنتجات",
            "id": "show_tech_specs",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "static",
            "format": "line",
            "id": "divider-2"
        },
        {
            "type": "static",
            "format": "title",
            "id": "header-settings",
            "value": "إعدادات الرأس",
            "variant": "h6"
