        {
            "type": "boolean",
            "icon": "sicon-search",
            "label": "بحث متقدم للمنتجات التقنية",
            "description": "تفعيل البحث بالمواصفات التقنية",
            "id": "advanced_tech_search",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "static",
            "format": "line",
            "id": "divider-3"
        },
        {
            "type": "static",
            "format": "title",
            "id": "product-settings",
            "value": "إعدادات المنتجات",
            "variant": "h6"
        },
        {
            "type": "boolean",
            "icon": "sicon-compare",
            "label": "مقارنة المنتجات",
            "description": "إمكانية مقارنة المواصفات بين المنتجات",
            "id": "product_comparison",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "boolean",
            "icon": "sicon-image-gallery",
            "label": "معرض صور 360 درجة",
            "description": "دعم عرض المنتجات بزاوية 360 درجة",
            "id": "product_360_view",
            "format": "switch",
            "value": true,
            "selected": true
        },
        {
            "type": "boolean",
            "icon": "sicon-bookmark",
            "label": "شارات الأداء",
            "description": "عرض شارات الأداء للمنتجات (Gaming, Professional, etc.)",
            "id": "performance_badges",
            "format": "switch",
            "value": true,
            "selected": true
        }
    ],
